@page
@model LoginModel

@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>
<div class="row ">
    <div class="col-md-4 crypro-login-container">
        <section>
            <form id="account" method="post" class="crypto-login-form">
               
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mdc-text-field ">
                    <label asp-for="Input.Email" class="mdc-floating-label"></label>
                    <input asp-for="Input.Email" class="form-control mdc-text-field__input" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mdc-text-field " >
                    <label asp-for="Input.Password" class="mdc-floating-label"></label>
                    <input asp-for="Input.Password" class="form-control mdc-text-field__input" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mdc-form-field">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="remember-me-checkbox">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary mdc-button mdc-button--unelevated big-round-corner-button">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
          
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
