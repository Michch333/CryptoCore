@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}


<ul>
    <h1 style="color:#ffce61">@ViewData["Title"]</h1>
    <h4 style="color:#ffce61">Enter your email.</h4>
    <div class="crypro-login-container">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="mdc-text-field__input" placeholder="Email" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary mdc-button mdc-button--unelevated big-round-corner-button">Submit</button>
            </form>
        </div>
    </div>
</ul>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
